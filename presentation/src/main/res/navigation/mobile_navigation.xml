<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.myapp.presentation.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_nav_home_to_nav_rememner"
            app:destination="@id/nav_remember"
            app:enterAnim="@anim/nav_slide_enter_anim"
            app:exitAnim="@anim/nav_slide_exit_anim"
            app:popEnterAnim="@anim/nav_slide_pop_enter_anim"
            app:popExitAnim="@anim/nav_slide_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/nav_setting"
        android:name="com.myapp.presentation.ui.setting.SettingFragment"
        android:label="@string/menu_setting"
        tools:layout="@layout/fragment_setting" />

    <fragment
        android:id="@+id/nav_remember"
        android:name="com.myapp.presentation.ui.remember.RememberFragment"
        android:label="@string/menu_remember"
        tools:layout="@layout/fragment_remenber">
        <argument
            android:name="report"
            app:argType="com.myapp.domain.model.entity.Report" />
    </fragment>
    <fragment
        android:id="@+id/nav_constitution"
        android:name="com.myapp.presentation.ui.constitution.ConstitutionListFragment"
        android:label="@string/menu_constitution_list"
        tools:layout="@layout/fragment_constitution_list" />

</navigation>