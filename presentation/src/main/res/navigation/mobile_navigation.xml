<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.myapp.presentation.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_nav_home_to_nav_rememner"
            app:destination="@id/nav_remember"
            app:enterAnim="@anim/nav_slide_enter_anim"
            app:exitAnim="@anim/nav_slide_exit_anim"
            app:popEnterAnim="@anim/nav_slide_pop_enter_anim"
            app:popExitAnim="@anim/nav_slide_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.myapp.presentation.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_remember"
        android:name="com.myapp.presentation.ui.remenber.RememberFragment"
        android:label="RememberFragment"
        tools:layout="@layout/fragment_remenber">
        <argument
            android:name="report"
            app:argType="com.myapp.domain.model.entity.Report" />
    </fragment>

    <fragment
        android:id="@+id/diaryFactItem"
        android:name="com.myapp.presentation.ui.diary.FfsFactFragment"
        android:label="DiaryFactItem"
        tools:layout="@layout/item_diary_text_input">
        <action
            android:id="@+id/action_diaryFactItem_to_diaryFindItem"
            app:destination="@id/diaryFindItem" />
    </fragment>
    <fragment
        android:id="@+id/diaryFindItem"
        android:name="com.myapp.presentation.ui.diary.FfsFindFragment"
        android:label="DiaryFindItem"
        tools:layout="@layout/item_diary_text_input">
        <action
            android:id="@+id/action_diaryFindItem_to_diaryLessonItem"
            app:destination="@id/diaryLessonItem" />
    </fragment>
    <fragment
        android:id="@+id/diaryLessonItem"
        android:name="com.myapp.presentation.ui.diary.FfsLearnFragment"
        android:label="DiaryLessonItem"
        tools:layout="@layout/item_diary_text_input">
        <action
            android:id="@+id/action_diaryLessonItem_to_diaryStatementItem"
            app:destination="@id/diaryStatementItem" />
    </fragment>
    <fragment
        android:id="@+id/diaryStatementItem"
        android:name="com.myapp.presentation.ui.diary.FfsStatementFragment"
        android:label="DiaryStatementItem"
        tools:layout="@layout/item_diary_text_input" />

    <fragment
        android:id="@+id/diaryReasonItem"
        android:name="com.myapp.presentation.ui.diary.WeatherReasonFragment"
        android:label="DiaryReasonItem" />
    <fragment
        android:id="@+id/diaryActionItem"
        android:name="com.myapp.presentation.ui.diary.WeatherImproveItem"
        android:label="DiaryActionItem" />
</navigation>