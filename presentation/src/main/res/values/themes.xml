<resources>
    <!-- Base application theme. -->
    <style name="Theme.SelfUpdateRoutine" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bg_color_primary</item>
        <item name="colorPrimaryVariant">@color/bg_color_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#E57373</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:windowFullscreen">true</item>
        <!--        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
        <!-- Customize your theme here. -->

        <item name="materialButtonStyle">@style/Widget.MyApp.Button.Primary</item>
        <!-- ActionBarのスタイル設定 -->
        <item name="android:actionBarStyle">@style/CustomActionBar</item>
        <item name="actionBarStyle">@style/CustomActionBar</item>

    </style>

    <style name="Theme.SelfUpdateRoutine.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- 背景色の設定とタイトルカラーのスタイル設定 -->
    <style name="CustomActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:windowContentOverlay">@null</item>
        <item name="titleTextStyle">@style/titleTextStyle</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- タイトルカラーの設定 -->
    <style name="titleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#000000</item>
    </style>

    <!--    &lt;!&ndash; TextInputLayout &ndash;&gt;-->
    <!--    <style name="Custom.TextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">-->
    <!--        <item name="hintTextColor">@color/bg_color_accent</item>-->
    <!--        <item name="boxStrokeColor">@color/bg_color_accent</item>-->
    <!--    </style>-->

    <!-- Button -->
    <style name="Widget.MyApp.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MyApp.Button</item>
        <item name="android:textColor">@color/text_color_light_primary</item>
    </style>

    <style name="Widget.MyApp.Button.White" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MyApp.Button</item>
        <item name="android:textColor">@color/bg_color_primary_dark_selector</item>
        <item name="android:backgroundTint">@color/bg_color_white_selector</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.Button" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30dp</item>
    </style>

</resources>