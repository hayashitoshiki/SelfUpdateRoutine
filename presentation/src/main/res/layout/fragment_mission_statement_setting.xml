<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="com.myapp.domain.model.value.AlarmMode" />

        <variable
            name="viewModel"
            type="com.myapp.presentation.ui.mission_statement.MissionStatementSettingViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/card_result">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_title_funeral"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="@string/title_sub_dai"
                    android:textColor="@color/text_color_dark_primary"
                    android:textSize="@dimen/title_text"
                    android:textStyle="bold|italic"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/list_funeral"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:overScrollMode="never"
                    app:layout_constraintEnd_toEndOf="@+id/txt_title_funeral"
                    app:layout_constraintStart_toStartOf="@+id/txt_title_funeral"
                    app:layout_constraintTop_toBottomOf="@+id/txt_title_funeral" />

                <TextView
                    android:id="@+id/txt_title_mission_statement"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/title_sub_mission_statement"
                    android:textColor="@color/text_color_dark_primary"
                    android:textSize="@dimen/title_text"
                    android:textStyle="bold|italic"
                    app:layout_constraintEnd_toEndOf="@+id/list_funeral"
                    app:layout_constraintStart_toStartOf="@+id/list_funeral"
                    app:layout_constraintTop_toBottomOf="@+id/list_funeral" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txt_value_mission_statement"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="@+id/txt_title_mission_statement"
                    app:layout_constraintStart_toStartOf="@+id/txt_title_mission_statement"
                    app:layout_constraintTop_toBottomOf="@+id/txt_title_mission_statement"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_mission_statement"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@={viewModel.purposeLife}" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/txt_title_constitution"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/title_sub_constitution"
                    android:textColor="@color/text_color_dark_primary"
                    android:textSize="@dimen/title_text"
                    android:textStyle="bold|italic"
                    app:layout_constraintEnd_toEndOf="@+id/txt_value_mission_statement"
                    app:layout_constraintStart_toStartOf="@+id/txt_value_mission_statement"
                    app:layout_constraintTop_toBottomOf="@+id/txt_value_mission_statement" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/list_constitution"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:overScrollMode="never"
                    app:layout_constraintEnd_toEndOf="@+id/txt_title_constitution"
                    app:layout_constraintStart_toStartOf="@+id/txt_title_constitution"
                    app:layout_constraintTop_toBottomOf="@+id/txt_title_constitution" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/card_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="16dp"
            android:background="@drawable/shape_rounded_corners_bg_primary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ScrollView
                android:layout_width="0dp"
                android:layout_height="160dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/btn_change">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/alarm_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="24dp"
                        android:text="@string/title_sub_dai"
                        android:textColor="@{context.getColor(viewModel.funeralListDiffColor)}"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/list_result_funeral"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/alarm_title"
                        app:layout_constraintTop_toBottomOf="@+id/alarm_title" />

                    <TextView
                        android:id="@+id/mode_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/title_sub_mission_statement"
                        android:textColor="@{context.getColor(viewModel.purposeLifeDiffColor)}"
                        app:layout_constraintStart_toStartOf="@+id/alarm_title"
                        app:layout_constraintTop_toBottomOf="@+id/list_result_funeral" />

                    <TextView
                        android:id="@+id/mode_diff_value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@{viewModel.purposeLife}"
                        android:textColor="@{context.getColor(viewModel.purposeLifeDiffColor)}"
                        app:layout_constraintEnd_toEndOf="@+id/list_result_funeral"
                        app:layout_constraintStart_toStartOf="@+id/mode_title"
                        app:layout_constraintTop_toBottomOf="@+id/mode_title" />

                    <TextView
                        android:id="@+id/next_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/title_sub_constitution"
                        android:textColor="@{context.getColor(viewModel.constitutionListDiffColor)}"
                        app:layout_constraintStart_toStartOf="@+id/mode_title"
                        app:layout_constraintTop_toBottomOf="@+id/mode_diff_value" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/list_result_constitution"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="@+id/mode_diff_value"
                        app:layout_constraintStart_toStartOf="@+id/mode_diff_value"
                        app:layout_constraintTop_toBottomOf="@+id/next_title" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_change"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="@string/btn_update"
                android:enabled="@{viewModel.isEnableConfirmButton()}"
                style="@style/Widget.MyApp.Button.White"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>