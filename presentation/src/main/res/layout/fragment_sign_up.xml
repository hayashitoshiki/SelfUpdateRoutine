<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_title_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_sub_email"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toTopOf="@+id/email1_input_layout"
            app:layout_constraintStart_toStartOf="@+id/email1_input_layout" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/email1_input_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_email1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/txt_title_email2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_sub_email"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toTopOf="@+id/email2_input_layout"
            app:layout_constraintStart_toStartOf="@+id/email2_input_layout" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/email2_input_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="@+id/email1_input_layout"
            app:layout_constraintStart_toStartOf="@+id/email1_input_layout"
            app:layout_constraintTop_toBottomOf="@+id/email1_input_layout">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_email2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/txt_title_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_sub_password"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toTopOf="@+id/password1_input_layout"
            app:layout_constraintStart_toStartOf="@+id/password1_input_layout" />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password1_input_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="@+id/email2_input_layout"
            app:layout_constraintStart_toStartOf="@+id/email2_input_layout"
            app:layout_constraintTop_toBottomOf="@+id/email2_input_layout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtPassword1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/txt_title_password2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_sub_password"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toTopOf="@+id/password2_input_layout"
            app:layout_constraintStart_toStartOf="@+id/password2_input_layout" />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password2_input_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="@+id/password1_input_layout"
            app:layout_constraintStart_toStartOf="@+id/password1_input_layout"
            app:layout_constraintTop_toBottomOf="@+id/password1_input_layout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_password2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_sign_in"
            android:text="@string/btn_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            app:layout_constraintStart_toStartOf="@+id/password2_input_layout"
            app:layout_constraintEnd_toEndOf="@+id/password2_input_layout"
            app:layout_constraintTop_toBottomOf="@+id/password2_input_layout" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>