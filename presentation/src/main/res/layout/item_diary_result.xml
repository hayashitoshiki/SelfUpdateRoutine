<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.myapp.presentation.home.ui.slideshow.SlideshowViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="【下記の内容でよろしいでしょうか？"
            android:textSize="@dimen/title_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_section1_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:text="@string/section1_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/txt_question1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="TextView"
            app:layout_constraintStart_toEndOf="@+id/txt_section1_1"
            app:layout_constraintTop_toTopOf="@+id/txt_section1_1" />

        <TextView
            android:id="@+id/txt_answer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@{viewModel.factInputText}"
            app:layout_constraintStart_toStartOf="@+id/txt_section1_1"
            app:layout_constraintTop_toBottomOf="@+id/txt_section1_1" />

        <TextView
            android:id="@+id/txt_section1_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/section1_2"
            app:layout_constraintStart_toStartOf="@+id/txt_answer1"
            app:layout_constraintTop_toBottomOf="@+id/txt_answer1" />

        <TextView
            android:id="@+id/txt_question2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="TextView"
            app:layout_constraintStart_toEndOf="@+id/txt_section1_2"
            app:layout_constraintTop_toTopOf="@+id/txt_section1_2" />

        <TextView
            android:id="@+id/txt_answer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@{viewModel.noticeInputText}"
            app:layout_constraintStart_toStartOf="@+id/txt_section1_2"
            app:layout_constraintTop_toBottomOf="@+id/txt_section1_2" />

        <TextView
            android:id="@+id/txt_section1_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/section1_3"
            app:layout_constraintStart_toStartOf="@+id/txt_answer2"
            app:layout_constraintTop_toBottomOf="@+id/txt_answer2" />

        <TextView
            android:id="@+id/txt_question3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="TextView"
            app:layout_constraintStart_toEndOf="@+id/txt_section1_3"
            app:layout_constraintTop_toTopOf="@+id/txt_section1_3" />

        <TextView
            android:id="@+id/txt_answer3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@{viewModel.learnInputText}"
            app:layout_constraintStart_toStartOf="@+id/txt_section1_3"
            app:layout_constraintTop_toBottomOf="@+id/txt_section1_3" />

        <TextView
            android:id="@+id/txt_section1_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/section1_4"
            app:layout_constraintStart_toStartOf="@+id/txt_answer3"
            app:layout_constraintTop_toBottomOf="@+id/txt_answer3" />

        <TextView
            android:id="@+id/txt_question4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="TextView"
            app:layout_constraintStart_toEndOf="@+id/txt_section1_4"
            app:layout_constraintTop_toTopOf="@+id/txt_section1_4" />

        <TextView
            android:id="@+id/txt_answer4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@{viewModel.statementInputText}"
            app:layout_constraintStart_toStartOf="@+id/txt_section1_4"
            app:layout_constraintTop_toBottomOf="@+id/txt_section1_4" />


        <TextView
            android:id="@+id/txt_section2_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:text="@string/section2_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_answer4" />

        <TextView
            android:id="@+id/txt_question5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="TextView"
            app:layout_constraintStart_toEndOf="@+id/txt_section2_1"
            app:layout_constraintTop_toTopOf="@+id/txt_section2_1" />

        <TextView
            android:id="@+id/txt_answer5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="TextView"
            app:layout_constraintStart_toStartOf="@+id/txt_section2_1"
            app:layout_constraintTop_toBottomOf="@+id/txt_section2_1" />

        <TextView
            android:id="@+id/txt_section2_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/section2_2"
            app:layout_constraintStart_toStartOf="@+id/txt_answer5"
            app:layout_constraintTop_toBottomOf="@+id/txt_answer5" />

        <TextView
            android:id="@+id/txt_question6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="TextView"
            app:layout_constraintStart_toEndOf="@+id/txt_section2_2"
            app:layout_constraintTop_toTopOf="@+id/txt_section2_2" />

        <TextView
            android:id="@+id/txt_answer6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="TextView"
            app:layout_constraintStart_toStartOf="@+id/txt_section2_2"
            app:layout_constraintTop_toBottomOf="@+id/txt_section2_2" />

        <TextView
            android:id="@+id/txt_section2_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/section2_3"
            app:layout_constraintStart_toStartOf="@+id/txt_answer6"
            app:layout_constraintTop_toBottomOf="@+id/txt_answer6" />

        <TextView
            android:id="@+id/txt_question7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="TextView"
            app:layout_constraintStart_toEndOf="@+id/txt_section2_3"
            app:layout_constraintTop_toTopOf="@+id/txt_section2_3" />

        <TextView
            android:id="@+id/txt_answer7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="TextView"
            app:layout_constraintStart_toStartOf="@+id/txt_section2_3"
            app:layout_constraintTop_toBottomOf="@+id/txt_section2_3" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="確定"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>